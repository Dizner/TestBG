<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.dlrj.yuanqu.view.activity.MainActivity">
    <FrameLayout
        android:id="@+id/fl_main_layout"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="visible"
        android:layout_height="0dp"/>
    <include layout="@layout/view_line_gray"/>
    <LinearLayout
        android:id="@+id/ll_main_tabs"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/ll_main_btn_tab1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_main_img_tab1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingTop="3dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/tv_main_txt_tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/iv_main_img_tab1"
                android:textSize="12sp"
                android:textColor="@color/text_black_1"
                android:gravity="center"
                android:text="@string/tab_1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_main_btn_tab2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_main_img_tab2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingTop="3dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/tv_main_txt_tab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/iv_main_img_tab2"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/text_black_1"
                android:text="@string/tab_1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_main_btn_tab3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_main_img_tab3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingTop="3dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/tv_main_txt_tab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/iv_main_img_tab3"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/text_black_1"
                android:text="@string/tab_1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_main_btn_tab4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_main_img_tab4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/tv_main_txt_tab4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/iv_main_img_tab4"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/text_black_1"
                android:text="@string/tab_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/write"
                android:textSize="8sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_toRightOf="@+id/iv_main_img_tab4"
                android:layout_marginLeft="-10dp"
                android:background="@drawable/bg_red_rounded"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
